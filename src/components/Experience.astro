---
  const experiences = [
    {
      company: "Mood Studios",
      role: "Game Developer",
      period: "2023 - Present",
      description: "Video game development company, creators of Splitwars. Contributing to game development using Unity and C#.",
      technologies: ["Unity", "C#", "Game Design"]
    }
  ];
  ---

  <section id="experience" class="py-24 px-6 bg-black">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-4">
        <span class="text-red-500">//</span> Experience
      </h2>
      <div class="w-24 h-1 bg-red-600 mx-auto mb-12"></div>

      <div class="max-w-2xl mx-auto">
        {experiences.map((exp) => (
          <div class="p-6 bg-gradient-to-br from-gray-900 to-black rounded-xl border border-red-900/30">
            <div class="flex items-center justify-between mb-4">
              <span class="text-red-500 text-sm font-semibold">{exp.period}</span>
              <span class="px-2 py-1 bg-red-600/20 text-red-400 text-xs rounded-full">Current</span>
            </div>
            <h3 class="text-xl font-bold text-white mb-1">{exp.role}</h3>
            <p class="text-red-500 font-semibold mb-4">{exp.company}</p>
            <p class="text-gray-400 mb-4">{exp.description}</p>
            <div class="flex flex-wrap gap-2">
              {exp.technologies.map((tech) => (
                <span class="px-2 py-1 bg-red-900/20 text-gray-300 rounded text-sm">{tech}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
