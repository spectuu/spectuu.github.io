  <section id="contact" class="py-24 px-6 bg-gradient-to-b from-gray-900/50 to-black">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-4">
        <span class="text-red-500">//</span> Get In Touch
      </h2>
      <div class="w-24 h-1 bg-red-600 mx-auto mb-6"></div>
      <p class="text-gray-400 text-center max-w-2xl mx-auto mb-12">
        Have a project in mind or want to collaborate? Feel free to reach out!
      </p>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-gradient-to-br from-gray-900 to-black p-8 rounded-2xl border border-red-900/30">
          <h3 class="text-xl font-semibold text-white mb-6">Send me a message</h3>
          <form action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
            <input type="hidden" name="access_key" value="26dbf1a2-77e6-4f6c-b961-33f0a3805f58" />
            <input type="hidden" name="subject" value="New Contact from Portfolio" />

            <div>
              <label for="name" class="block text-gray-400 mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-black/50 border border-red-900/30 rounded-lg focus:border-red-600 focus:outline-none text-white
  transition-colors"
                placeholder="Your name"
              />
            </div>

            <div>
              <label for="email" class="block text-gray-400 mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-black/50 border border-red-900/30 rounded-lg focus:border-red-600 focus:outline-none text-white
  transition-colors"
                placeholder="your@email.com"
              />
            </div>

            <div>
              <label for="subject" class="block text-gray-400 mb-2">Subject</label>
              <input
                type="text"
                id="subject"
                name="subject_line"
                required
                class="w-full px-4 py-3 bg-black/50 border border-red-900/30 rounded-lg focus:border-red-600 focus:outline-none text-white
  transition-colors"
                placeholder="What's this about?"
              />
            </div>

            <div>
              <label for="message" class="block text-gray-400 mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-black/50 border border-red-900/30 rounded-lg focus:border-red-600 focus:outline-none text-white transition-colors
   resize-none"
                placeholder="Your message..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full py-4 bg-red-600 hover:bg-red-700 rounded-lg font-semibold transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Social Links -->
        <div class="space-y-8">
          <div class="bg-gradient-to-br from-gray-900 to-black p-8 rounded-2xl border border-red-900/30">
            <h3 class="text-xl font-semibold text-white mb-6">Connect with me</h3>
            <div class="space-y-4">
              {socialLinks.map(link => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-4 p-4 bg-black/50 rounded-lg border border-red-900/20 hover:border-red-600/50 transition-all duration-300
  group"
                >
                  <div class="text-red-500 group-hover:scale-110 transition-transform" set:html={link.icon} />
                  <div>
                    <p class="text-white font-medium">{link.name}</p>
                    {link.username && <p class="text-gray-500 text-sm">{link.username}</p>}
                  </div>
                </a>
              ))}
            </div>
          </div>

          <div class="bg-gradient-to-br from-red-950/30 to-black p-8 rounded-2xl border border-red-900/30 text-center">
            <p class="text-gray-400 mb-2">Currently available for</p>
            <p class="text-2xl font-bold text-red-500">Freelance & Full-time</p>
            <p class="text-gray-500 mt-2">opportunities</p>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div class="mt-16 pt-8 border-t border-red-900/20 text-center">
        <p class="text-gray-500">
          © 2024 Santiago A. Martinez Lora. Built with
          <span class="text-red-500">♥</span> using Astro
        </p>
      </div>
    </div>
  </section>

