---
  const projects = [
    {
      title: "Scrum Meeting Bot",
      description: "A Discord bot for scheduling Scrum meetings.",
      tags: ["Discord.js", "Node.js", "MongoDB"],
      featured: true
    }
  ];
  ---

  <section id="projects" class="py-24 px-6 bg-gradient-to-b from-black to-gray-900/50">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-4">
        <span class="text-red-500">//</span> Projects
      </h2>
      <div class="w-24 h-1 bg-red-600 mx-auto mb-12"></div>

      <div class="space-y-8">
        {projects.map((project) => (
          <div class="group p-8 rounded-2xl border border-red-900/30 bg-black/50">
            <span class="text-red-500 text-sm uppercase">Featured Project</span>
            <h3 class="text-2xl font-bold text-white mt-2">{project.title}</h3>
            <p class="text-gray-400 mt-4">{project.description}</p>
            <div class="flex gap-2 mt-4">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 bg-red-900/30 text-red-400 rounded-full text-sm">{tag}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
