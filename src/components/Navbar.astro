---
  const links = [
    { href: '#about', label: 'About' },
    { href: '#skills', label: 'Skills' },
    { href: '#projects', label: 'Projects' },
    { href: '#experience', label: 'Experience' },
    { href: '#contact', label: 'Contact' },
  ];
  ---

  <nav class="fixed top-0 w-full z-50 bg-black/80 backdrop-blur-sm border-b border-red-900/20">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="#" class="text-2xl font-bold text-red-500">SM</a>
      <div class="hidden md:flex gap-8">
        {links.map(link => (
          <a href={link.href} class="text-gray-300 hover:text-red-500 transition-colors duration-300">
            {link.label}
          </a>
        ))}
      </div>
      <button id="menu-btn" class="md:hidden text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    <div id="mobile-menu" class="hidden md:hidden px-6 pb-4">
      {links.map(link => (
        <a href={link.href} class="block py-2 text-gray-300 hover:text-red-500 transition-colors">
          {link.label}
        </a>
      ))}
    </div>
  </nav>

  <script>
    document.getElementById('menu-btn')?.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.toggle('hidden');
    });
  </script>
